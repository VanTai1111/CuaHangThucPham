@model IEnumerable<CuaHangThucPham.Models.CheckoutViewModel>

@{
    ViewBag.Title = "Danh sách đơn hàng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Danh sách đơn hàng</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID Đơn Hàng</th>
                                <th>Người đặt</th>
                                <th>Ngày Đặt Hàng</th>
                                <th>Địa Chỉ Giao Hàng</th>
                                <th>Thành Phố</th>
                                <th>Tổng Tiền</th>
                                <th>Ghi Chú</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OrderID</td>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.OrderDate</td>
                                        <td>@item.ShippingAddress</td>
                                        <td>@item.ShippingCity</td>
                                        <td>@item.TotalAmount.ToString("N0")</td>
                                        <td>@item.Notes</td>
                                        <td>
                                            <button class="btn btn-custom btn-edit" onclick="editProduct(@item.OrderID)">
                                                <i class="fas fa-edit"></i> Chỉnh sửa
                                            </button>
                                            <button class="btn btn-custom btn-delete" onclick="deleteProduct(@item.OrderID)">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">Không có đơn hàng nào để hiển thị.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
